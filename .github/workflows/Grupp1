name: Git-checkouter

# Trigger which git action (push, pull_request)
# in which branch(es) should start the jobs...
on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

# jobs to run
jobs:
  # build, the name of the job, a server to create and auto configure
  build:
    name: Checkout main to web server
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    - run: ls
      #with: 
      #  path: main
    - name: copy file via ssh password
      uses: appleboy/scp-action@v0.1.4
      with:
        host: ${{ secrets.207.180.254.218 }}
        username: ${{ secrets.root }}
        password: ${{ secrets.sS3w6ybwxz0KN }}
        port: ${{ secrets.55555 }}
        source: '*.*'
        target: /var/www/html
